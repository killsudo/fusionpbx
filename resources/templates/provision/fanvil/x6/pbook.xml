<?xml version="1.0" encoding="UTF-8"?>
<PhoneBook>
{foreach $contacts as $row}
{if $row.contact_type == 'user'}
        <DirectoryEntry>
{if $row.contact_name_given != ""}
        <Name>{$row.contact_name_given} {$row.contact_name_family}</Name>
{else}
        <Name>{$row.effective_caller_id_name}</Name>
{/if}

{foreach $row.numbers as $number}
{if $number.phone_label == "work"}
        {if $number.phone_number != ""}<Telephone>{$number.phone_number}</Telephone>{/if}
{else}
        <Telephone>{$number.phone_extension}</Telephone>
{/if}
{if $number.phone_label == "mobile"}
        <Mobile>{$number.phone_number_mobile}</Mobile>
{/if}
{/foreach}
        <Other></Other>
        <Ring>Default</Ring>
        <Group>{$row.contact_category}</Group>
        </DirectoryEntry>
{/if}
{/foreach}
</PhoneBook>
